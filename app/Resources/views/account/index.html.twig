{% extends 'layout.html.twig' %}

{% block content_header %}
    <h1>Account <small>List</small></h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('account_index') }}"><i class="fa fa-dashboard"></i> Account</a></li>
        <li class="active">List</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th style="width:50%">Description</th>
                        <th>Code</th>
                        <th>Dc</th>
                        <th>Type</th>
                        <th>Initial Balance</th>
                        <th>Cash</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for account in accounts %}
                        <tr>
                            <td><a href="{{ path('account_show', { 'id': account.id }) }}">{{ account.id }}</a></td>
                            <td>{{ account.name }}</td>
                            <td>{{ account.description }}</td>
                            <td>{{ account.code }}</td>
                            <td>{{ account.dc }}</td>
                            <td>{{ account.type }}</td>
                            <td>{{ account.initialBalance }}</td>
                            <td>{% if account.isCash %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success btn-sm" href="{{ path('account_show', { 'id': account.id }) }}"><i class="fa fa-eye"></i> Show</a>
                                    <a class="btn btn-primary btn-sm" href="{{ path('account_edit', { 'id': account.id }) }}"><i class="fa fa-edit"></i> Edit</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div><!-- /.box-body -->
    </div>

    <ul>
        <li>
            <a href="{{ path('account_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
