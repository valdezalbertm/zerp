{% extends 'layout.html.twig' %}

{% block content_header %}
    <h1>Account <small>Show</small></h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('account_index') }}"><i class="fa fa-dashboard"></i> Account</a></li>
        <li class="active">Show</li>
    </ol>
{% endblock %}

{% block content %}
    <h1>Account</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ account.description }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ account.code }}</td>
            </tr>
            <tr>
                <th>Dc</th>
                <td>{{ account.dc }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ account.type }}</td>
            </tr>
            <tr>
                <th>Initial Balance</th>
                <td>{{ account.initialBalance }}</td>
            </tr>
            <tr>
                <th>Cash Account</th>
                <td>{% if account.isCash %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if account.createdAt %}{{ account.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if account.updatedAt %}{{ account.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('account_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('account_edit', { 'id': account.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
