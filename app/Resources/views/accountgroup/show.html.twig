{% extends 'layout.html.twig' %}

{% block content %}
    <h1>AccountGroup</h1>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ accountGroup.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ accountGroup.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ accountGroup.description }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ accountGroup.code }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ accountGroup.level }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ accountGroup.type }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if accountGroup.createdAt %}{{ accountGroup.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if accountGroup.updatedAt %}{{ accountGroup.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('account_group_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('account_group_edit', { 'id': accountGroup.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
